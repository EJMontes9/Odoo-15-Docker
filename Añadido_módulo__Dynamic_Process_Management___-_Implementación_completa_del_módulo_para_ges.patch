+    _order = 'sequence, id'
+
+    name = fields.Char(string='Process Type', required=True, tracking=True)
+    code = fields.Char(string='Code', required=True, tracking=True)
+    description = fields.Text(string='Description', tracking=True)
+    active = fields.Boolean(default=True, tracking=True)
+    sequence = fields.Integer(default=10, help="Used to order process types")
+    
+    # Relationships
+    stage_ids = fields.One2many('dynamic.process.stage', 'process_type_id', string='Stages')
+    process_ids = fields.One2many('dynamic.process', 'process_type_id', string='Processes')
+    field_ids = fields.One2many('dynamic.process.field', 'process_type_id', string='Fields')
+    
+    # Version control
+    version = fields.Integer(string='Version', default=1, tracking=True, 
+                            help='Version of the process flow. Incremented when flow changes.')
+    date_updated = fields.Datetime(string='Last Updated', tracking=True)
+    
+    # Configuration
+    is_sequential = fields.Boolean(string='Sequential Flow', default=True, 
+                                  help='If checked, stages must be followed in sequence')
+    allow_return = fields.Boolean(string='Allow Returns', default=True,
+                                 help='If checked, processes can be returned to previous stages')
+    
+    _sql_constraints = [
+        ('code_unique', 'UNIQUE(code)', 'Process type code must be unique!'),
+    ]
+    
+    @api.model
+    def create(self, vals):
+        """Override create to update date_updated"""
+        vals['date_updated'] = fields.Datetime.now()
+        return super(DynamicProcessType, self).create(vals)
+    
+    def write(self, vals):
+        """Override write to update version and date_updated when flow changes"""
+        # Check if flow-related fields are being changed
+        flow_fields = ['stage_ids', 'is_sequential', 'allow_return']
+        if any(field in vals for field in flow_fields):
+            vals['version'] = self.version + 1
+            vals['date_updated'] = fields.Datetime.now()
+        return super(DynamicProcessType, self).write(vals)
+    
+    def copy(self, default=None):
+        """Override copy to ensure unique code"""
+        default = dict(default or {})
+        default.update({
+            'name': _('%s (copy)') % self.name,
+            'code': _('%s_COPY') % self.code,
+        })
+        return super(DynamicProcessType, self).copy(default)
+    
+    def get_fields_by_stage(self, stage_id):
+        """Get fields configured for a specific stage"""
+        self.ensure_one()
+        return self.field_ids.filtered(lambda f: stage_id in f.stage_ids.ids)
